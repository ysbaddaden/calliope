<%= form_for comment, :url => url do |f| %>
  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div class="field">
    <%= f.label :user_name %>
    <%= f.text_field :user_name %>
  </div>

  <div class="field">
    <%= f.label :user_email %>
    <%= f.email_field :user_email %>
  </div>

  <div class="field">
    <%= f.label :user_url %>
    <%= f.url_field :user_url, :placeholder => 'http://' %>
  </div>

  <div class="actions">
    <%= f.submit t(:submit_btn, :scope => [:calliope, :comments, action_name]) %>
  </div>
<% end %>
