<article class="post">
  <h1><%= @post.title %></h1>
  <p class="date"><%= l(@post.created_at) %></p>
  
  <div class="body">
    <%= simple_format @post.body %>
  </div>
  
  <ul class="actions">
    <li><%= link_to t('calliope.posts.index.edit_link'),
      edit_blog_post_path(current_blog.name, @post) %></li>
    
    <li><%= link_to t('calliope.posts.index.destroy_link'),
      blog_post_path(current_blog.name, @post), :method => :delete %></li>
  </ul>
</article>

<% content_for :sidebar do %>
  <%= render "blogs/about" %>
  <%= render "latest_posts", :posts => current_blog.posts.latest.limit(5) %>
<% end %>
